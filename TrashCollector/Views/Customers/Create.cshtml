@model TrashCollector.Models.CustomerViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_CustomerRegistrationLayout.cshtml";
}

<h1>User Information</h1>

<h4>Please fill form below</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer.FirstName" class="control-label"></label>
                <input asp-for="Customer.FirstName" class="form-control" />
                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.LastName" class="control-label"></label>
                <input asp-for="Customer.LastName" class="form-control" />
                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Customer.Balance" class="control-label"></label>
                <input asp-for="Customer.Balance" class="form-control" />
                <span asp-validation-for="Customer.Balance" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Customer.PickUpDay" class="control-label"></label>
                <select asp-for="Customer.PickUpDay" class="form-control">
                    <option value="">Select Day</option>
                    <option value="0">Sunday</option>
                    <option value="1">Monday</option>
                    <option value="2">Tuesday</option>
                    <option value="3">Wednesday</option>
                    <option value="4">Thursday</option>
                    <option value="5">Friday</option>
                    <option value="6">Saturday</option>
                </select>
                <span asp-validation-for="Customer.PickUpDay" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Customer.SuspendStart" class="control-label"></label>
                <input asp-for="Customer.SuspendStart" class="form-control" />
                <span asp-validation-for="Customer.SuspendStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.SuspendEnd" class="control-label"></label>
                <input asp-for="Customer.SuspendEnd" class="form-control" />
                <span asp-validation-for="Customer.SuspendEnd" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Address.StreetName" class="control-label"></label>
                <input asp-for="Address.StreetName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.City" class="control-label"></label>
                <input asp-for="Address.City" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.State" class="control-label"></label>
                <input asp-for="Address.State" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.ZipCode" class="control-label"></label>
                <input asp-for="Address.ZipCode" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
